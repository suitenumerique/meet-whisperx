# =========================
# ASR API configuration
# =========================

# --- Required secrets ---
# API key used to authenticate requests
API_KEY=

# Hugging Face access token (required for some models)
HF_TOKEN=

# =========================
# Optional configuration
# =========================

# Maximum batch size for transcription
BATCH_SIZE=16

# Model name (e.g. large-v2, medium, small)
MODEL=large-v2

# Keep-alive timeout (seconds)
TIMEOUT_KEEP_ALIVE=60

# =========================
# Alignment & interpolation
# =========================

# Torch: return character-level alignments (true/false)
RETURN_CHAR_ALIGNMENTS=false

# Whisperx Interpolation method
INTERPOLATE_METHOD=nearest

# Fill nearest gaps in alignment
FILL_NEAREST=false

# =========================
# Server settings
# =========================

# Port to bind the server
PORT=8000

# Enable auto-reload (development only)
RELOAD=false

# Root path if running behind a reverse proxy
# ROOT_PATH=

# Path to logging configuration file
LOGGING_CONFIG=logging-config.yaml

# Enable debug mode
DEBUG=false
